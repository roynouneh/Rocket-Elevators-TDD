<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Building adress</th>
      <th>Admin name</th>
      <th>Admin email</th>
      <th>Admin phone</th>
      <th>Tech contact name</th>
      <th>Tech contact email</th>
      <th>Tech contact phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.customer_id %></td>
        <td><%= building.building_adress %></td>
        <td><%= building.admin_name %></td>
        <td><%= building.admin_email %></td>
        <td><%= building.admin_phone %></td>
        <td><%= building.tech_contact_name %></td>
        <td><%= building.tech_contact_email %></td>
        <td><%= building.tech_contact_phone %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

